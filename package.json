    "micro-packed": "^0.6.3",
    "next": "^15.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "viem": "^2.21.0",
    "wagmi": "^2.12.0"
  },
  "devDependencies": {
    "@noble/hashes": "^2.0.1",
    "@playwright/test": "^1.58.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
