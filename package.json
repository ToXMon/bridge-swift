{
  "name": "bridge-swift",
  "version": "1.0.0",
  "description": "One-click USDC to USDCx bridge for Stacks blockchain",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "ipfs:build": "next build",
    "ipfs:upload": "node ./scripts/deploy-ipfs-simple.js",
